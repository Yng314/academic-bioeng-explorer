{
  "manifest_version": 3,
  "name": "Scholar Author ID Extractor",
  "version": "1.0.0",
  "description": "Extract Google Scholar author IDs and send to Academic Bioeng Explorer",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://scholar.google.com/citations?*view_op=search_authors*",
        "https://scholar.google.co.uk/citations?*view_op=search_authors*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
